<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/square_sombre"
    >
    <EditText
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_solid"
        android:layout_below="@id/logo"
        android:hint="Nom de l'event :"
        android:textSize="15dp"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/grey_fade_accent"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:padding="20dp"
        android:layout_marginHorizontal="30dp"

        android:gravity="top"
        />
    <EditText
        android:id="@+id/event_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_solid"
        android:layout_below="@id/event_name"
        android:textSize="15dp"
        android:hint="Descriptif :"
        android:textColorHint="@color/grey_fade_accent"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:padding="20dp"
        android:layout_marginHorizontal="30dp"
        android:textCursorDrawable="@null"
        android:gravity="top"
        android:height="100dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/add_pic"
        android:layout_below="@id/event_text"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_fade_black"
        android:text="Ajouter une image"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textColor="@color/grey_solid_lighter"
        />
    <RelativeLayout
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_pic"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_white_solid"
        android:layout_marginVertical="15dp">
    <EditText
        android:id="@+id/even_day"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="15dp"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/grey_fade_accent"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/even_month"
        android:layout_toRightOf="@id/even_day"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="15dp"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/grey_fade_accent"
        android:textColor="@color/black"

        />
    <EditText
        android:id="@+id/even_year"
        android:layout_toRightOf="@id/even_month"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="15dp"
        android:textCursorDrawable="@null"
        android:textColorHint="@color/grey_fade_accent"
        android:textColor="@color/black"
        />
    </RelativeLayout>
    <Button
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fadest_medium"
        android:paddingVertical="8dp"
        android:layout_below="@id/datepicker"
        android:textSize="20dp"
        android:text="Envoyer"
        android:textAllCaps="false"
        android:textColor="@color/grey_solid_lighter"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp" />

    <Button
        android:id="@+id/retour_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/bg_fadest_medium"
        android:paddingVertical="8dp"
        android:text="Retour"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/fade_black"
        android:textSize="20dp" />
</RelativeLayout>