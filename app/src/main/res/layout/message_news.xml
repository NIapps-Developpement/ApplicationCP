<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/square_sombre"
    >

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_dark"
        android:paddingVertical="8dp"
        android:layout_below="@id/logo"
        android:textSize="22dp"
        android:hint="Mot de passe"
        android:textColorHint="#CCC1C1C1"
        android:layout_marginTop="35dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:textCursorDrawable="@null"
        />
    <Button
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_gristrans2"
        android:paddingVertical="5dp"
        android:layout_below="@id/message"
        android:textSize="20dp"
        android:text="Envoyer"
        android:textAllCaps="false"
        android:textColor="#E3E3E3"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"/>
    <Button
        android:id="@+id/retour_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_bg_gristrans1"
        android:paddingVertical="5dp"
        android:layout_below="@id/send_message"
        android:textSize="20dp"
        android:text="Retour"
        android:textAllCaps="false"
        android:textColor="#D9000000"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"/>
</RelativeLayout>