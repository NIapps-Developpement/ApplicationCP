<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/square_sombre"
    >

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_solid"
        android:layout_below="@id/logo"
        android:textSize="20dp"
        android:hint="Votre message :"
        android:textColorHint="@color/grey_fade_accent"
        android:textColor="@color/black"
        android:layout_marginTop="35dp"
        android:padding="20dp"
        android:layout_marginHorizontal="30dp"
        android:textCursorDrawable="@null"
        android:height="180dp"
        android:gravity="top"
        />
    <Button
        android:id="@+id/send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fadest_medium"
        android:paddingVertical="8dp"
        android:layout_below="@id/message"
        android:textSize="20dp"
        android:text="Envoyer"
        android:textAllCaps="false"
        android:textColor="@color/grey_solid_lighter"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp" />
    <Button
        android:id="@+id/retour_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fadest_medium"
        android:paddingVertical="8dp"
        android:layout_below="@id/send_message"
        android:textSize="20dp"
        android:text="Retour"
        android:textAllCaps="false"
        android:textColor="@color/fade_black"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp" />
</RelativeLayout>